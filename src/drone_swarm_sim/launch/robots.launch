<launch>
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <!-- BEGIN TURTLEBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find drone_swarm_sim)/launch/turtlebot.launch" >
      <arg name="init_pose" value="-x 5 -y 5 -z 0" />
      <arg name="robot_name"  value="Robot1" />
    </include>
  </group>

  <!-- BEGIN TURTLEBOT 2-->
  <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find drone_swarm_sim)/launch/turtlebot.launch" >
      <arg name="init_pose" value="-x -5 -y 5 -z 0" />
      <arg name="robot_name"  value="Robot2" />
    </include>
  </group>
  
  <!-- BEGIN TURTLEBOT 3-->
  <group ns="robot3">
    <param name="tf_prefix" value="robot3_tf" />
    <include file="$(find drone_swarm_sim)/launch/turtlebot.launch" >
      <arg name="init_pose" value="-x 5 -y -5 -z 0" />
      <arg name="robot_name"  value="Robot3" />
    </include>
  </group>
  
  <!-- BEGIN TURTLEBOT 4-->
  <group ns="robot4">
    <param name="tf_prefix" value="robot4_tf" />
    <include file="$(find drone_swarm_sim)/launch/turtlebot.launch" >
      <arg name="init_pose" value="-x -5 -y -5 -z 0" />
      <arg name="robot_name"  value="Robot4" />
    </include>
  </group>

    
  <!-- BEGIN DRONE 1-->
  <group ns="drone1">
    <param name="tf_prefix" value="drone1_tf" />
    <include file="$(find drone_swarm_sim)/launch/drone.launch" >
      <arg name="init_pose" value="-x -6 -y -6 -z 1" />
      <arg name="robot_name"  value="sjtu-drone" />
    </include>
  </group>

</launch>
